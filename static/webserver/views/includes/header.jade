nav.navbar.navbar-default.navbar-static-top(role='navigation')
  .container
      .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href='/#/queue')
              img.logo(src='/images/logo.png')
      #navbar.navbar-collapse.collapse(ng-controller="NavCtrl")
          ul.nav.navbar-nav
              each module in mconnenv.activatedModules
                  li(ng-class="classActiveMainMenu('/modules/#{module.name}/main')")
                     a(href='/#/modules/#{module.name}/main') #{module.name}
          ul.nav.navbar-nav.navbar-right
              li(ng-class="classActiveMainMenu('/queue')")
                  a(href='/#/queue') Queue
                      span.badge(ng-if="numberOfTasks != 0", class="ng-cloak") {{numberOfTasks}}
              li.about
                  a(href='', data-toggle='modal', data-target='#about') About
              li.docs
                  a(href='https://github.com/livespotting/mconn', target='_blank')
                      | Docs
                      span.glyphicon.glyphicon-link(aria-hidden='true')
